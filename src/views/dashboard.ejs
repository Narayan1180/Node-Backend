<!DOCTYPE html>
<html>
<head>
  <title>Product Dashboard</title>

  <style>
    * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: Arial, Helvetica, sans-serif;
  background: #eaeded; /* Amazon-like background */
  color: #111827;
}

/* =========================
   NAVBAR - SOLID GREEN
========================= */
.navbar {
  background: #0B3D2E; /* Pure solid green */
  display: flex;
  align-items: center;
  padding: 14px 30px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.6);
  gap: 20px;
  position: sticky;
  top: 0;
  z-index: 100;
}

/* LEFT */
.nav-left {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  gap: 16px;
}

.logo {
  font-size: 22px;
  font-weight: 700;
  color: #facc15;
  text-decoration: none;
}

.cart-link {
  text-decoration: none;
  font-size: 14px;
  color: #e5e7eb;
  padding: 6px 12px;
  border-radius: 20px;
  border: 1px solid rgba(255,255,255,0.25);
  transition: all 0.2s ease;
}

.cart-link:hover {
  background: rgba(250,204,21,0.15);
  color: #facc15;
  border-color: #facc15;
}

/* CENTER */
.nav-center {
  flex: 1;
  display: flex;
  justify-content: center;
}

/* SEARCH BAR */
.search-bar {
  display: flex;
  width: 100%;
  max-width: 700px;
  background: #fff;
  border-radius: 6px;
  overflow: hidden;
  height: 36px;
}

.search-bar select {
  border: none;
  padding: 0 10px;
  height: 100%;
  background: #f3f4f6;
  font-size: 13px;
  outline: none;
  cursor: pointer;
}

.search-bar input {
  flex: 1;
  border: none;
  padding: 0 10px;
  font-size: 14px;
  outline: none;
}

.search-bar button {
  border: none;
  background: #facc15;
  padding: 0 14px;
  height: 100%;
  cursor: pointer;
  font-size: 15px;
}

.search-bar button:hover {
  background: #fbbf24;
}

/* RIGHT */
.nav-links {
  list-style: none;
  display: flex;
  align-items: center;
  gap: 12px;
  margin: 0;
  padding: 0;
  flex-shrink: 0;
}

.nav-links a {
  text-decoration: none;
  color: #e5e7eb;
  font-size: 14px;
  padding: 6px 10px;
  border-radius: 6px;
  transition: all 0.2s ease;
}

.nav-links a:hover {
  background: rgba(255,255,255,0.1);
  color: #ffffff;
}

.welcome {
  background: rgba(255,255,255,0.12);
  padding: 6px 14px;
  border-radius: 20px;
  font-size: 13px;
  color: #f9fafb;
}

.logout {
  background: #7c2d12;
  color: #ffffff !important;
}

.logout:hover {
  background: #9a3412;
}

/* =========================
   PAGE WRAPPER
========================= */
.page {
  padding: 24px;
}

/* =========================
   PRODUCT GRID (4 PER ROW) - ORIGINAL STYLING
========================= */
.container {
  max-width: 1200px;
  margin: auto;
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* üî• 4 per row */
  gap: 20px;
  align-items: start; /* Prevent vertical stretching */
}

/* =========================
   PRODUCT CARD - ORIGINAL STYLING
========================= */
.card {
  background: #ffffff;
  border-radius: 6px;
  padding: 15px;
  box-shadow: 0 1px 4px rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.card:hover {
  transform: translateY(-4px);
  box-shadow: 0 6px 18px rgba(0,0,0,0.15);
}

/* PRODUCT IMAGE - ORIGINAL */
.card img {
  width: 100%;
  height: 160px;
  object-fit: cover;
  border-radius: 4px;
}

/* PRODUCT INFO - ORIGINAL */
.card h3 {
  font-size: 15px;
  margin: 10px 0 6px;
}

.card p {
  font-size: 13px;
  color: #374151;
  margin-bottom: 8px;
}

/* PRICE - ORIGINAL */
.price {
  font-size: 16px;
  font-weight: bold;
  color: #111827;
}

/* ADD TO CART BUTTON - ORIGINAL */
.card button {
  margin-top: 12px;
  background: #facc15;
  color: #111827;
  border: none;
  padding: 10px;
  border-radius: 6px;
  cursor: pointer;
  font-weight: bold;
  transition: background 0.2s ease;
}

.card button:hover {
  background: #fbbf24;
}

/* =========================
   FLASH MESSAGES
========================= */
.flash-msg {
  position: fixed;
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
  background: #dcfce7;
  color: #166534;
  padding: 12px 22px;
  border-radius: 8px;
  font-size: 14px;
  box-shadow: 0 10px 25px rgba(0,0,0,0.12);
  z-index: 999;
  animation: fadeOut 3s forwards;
}

@keyframes fadeOut {
  0% { opacity: 1; }
  80% { opacity: 1; }
  100% { opacity: 0; }
}

/* =========================
   RESPONSIVE - MOBILE & DESKTOP
========================= */

/* Tablet (1024px and below) */
@media (max-width: 1024px) {
  .container {
    grid-template-columns: repeat(3, 1fr);
    gap: 18px;
  }
  
  .navbar {
    padding: 12px 20px;
    gap: 15px;
  }
  
  .search-bar {
    max-width: 550px;
  }
  
  .card img {
    height: 150px;
  }
}

/* Medium Mobile (768px and below) */
@media (max-width: 768px) {
  .container {
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }
  
  .navbar {
    flex-wrap: wrap;
    padding: 12px 16px;
    gap: 12px;
  }
  
  .nav-left {
    order: 1;
    flex: 1;
  }
  
  .nav-center {
    order: 3;
    flex: 100%;
    margin-top: 10px;
  }
  
  .nav-links {
    order: 2;
  }
  
  .search-bar {
    max-width: 100%;
  }
  
  .nav-links {
    gap: 8px;
  }
  
  .card {
    padding: 12px;
  }
  
  .card img {
    height: 140px;
  }
  
  .card h3 {
    font-size: 14px;
  }
  
  .card p {
    font-size: 12px;
  }
  
  .page {
    padding: 16px;
  }
}

/* Small Mobile (480px and below) */
@media (max-width: 480px) {
  .container {
    grid-template-columns: 1fr;
    max-width: 350px;
    gap: 14px;
  }
  
  .navbar {
    flex-direction: column;
    align-items: stretch;
    padding: 12px;
    gap: 10px;
  }
  
  .nav-left {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }
  
  .nav-center {
    order: 2;
    margin-top: 0;
  }
  
  .nav-links {
    order: 3;
    justify-content: center;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 8px;
  }
  
  .nav-links li {
    flex: 1;
    min-width: 120px;
    text-align: center;
  }
  
  .nav-links a {
    padding: 8px 10px;
    display: block;
    font-size: 13px;
  }
  
  .welcome {
    padding: 6px 12px;
    font-size: 12px;
  }
  
  .logout {
    padding: 8px 12px !important;
  }
  
  .cart-link {
    padding: 6px 10px;
    font-size: 13px;
  }
  
  .search-bar {
    flex-direction: column;
    height: auto;
    border-radius: 8px;
    overflow: visible;
  }
  
  .search-bar select,
  .search-bar input,
  .search-bar button {
    width: 100%;
    border-radius: 0;
    padding: 12px;
    text-align: center;
    height: 45px;
  }
  
  .search-bar select {
    border-radius: 8px 8px 0 0;
    border-bottom: 1px solid #e5e7eb;
  }
  
  .search-bar button {
    border-radius: 0 0 8px 8px;
  }
  
  .card {
    padding: 15px;
  }
  
  .card img {
    height: 180px;
  }
  
  .card h3 {
    font-size: 15px;
  }
  
  .card p {
    font-size: 13px;
  }
  
  .card button {
    padding: 12px;
    font-size: 14px;
  }
  
  .logo {
    font-size: 20px;
  }
}

/* Large Desktop (1200px and above) */
@media (min-width: 1200px) {
  .container {
    max-width: 1400px;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }
  
  .card img {
    height: 180px;
  }
  
  .page {
    padding: 30px;
  }
}

/* Touch device optimizations */
@media (hover: none) and (pointer: coarse) {
  .card:hover {
    transform: none;
    box-shadow: 0 1px 4px rgba(0,0,0,0.1);
  }
  
  .card button:active {
    background: #fbbf24;
    transform: scale(0.98);
  }
}
/* =========================
   GLOBAL RESET
========================= */
</style>
</head>

