/* =========================
   GLOBAL RESET
========================= */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: Arial, Helvetica, sans-serif;
  background: #eaeded; /* Amazon-like background */
  color: #111827;
}

/* =========================
   NAVBAR
========================= */

.logo {
  font-size: 22px;
  font-weight: 700;
  color: #facc15; /* gold */
  letter-spacing: 0.6px;
}

/* CART */
.cart-link {
  text-decoration: none;
  font-size: 14px;
  color: #e5e7eb;
  padding: 6px 12px;
  border-radius: 20px;
  border: 1px solid rgba(255,255,255,0.2);
  transition: all 0.2s ease;
}

.cart-link:hover {
  background: rgba(250,204,21,0.15);
  color: #facc15;
  border-color: #facc15;
}

/* RIGHT LINKS */

/* WELCOME BADGE */
.welcome {
  background: rgba(255,255,255,0.12);
  padding: 6px 14px;
  border-radius: 20px;
  font-size: 13px;
  color: #f9fafb;
}

/* LOGOUT */
.logout {
  background: #7c2d12;
  color: #ffffff !important;
}

.logout:hover {
  background: #9a3412;
}

/* =========================
   PAGE WRAPPER
========================= */
.page {
  padding: 24px;
}

/* =========================
   PRODUCT GRID (4 PER ROW)
========================= */
.container {
  max-width: 1200px;
  margin: auto;
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* üî• 4 per row */
  gap: 20px;
}

/* =========================
   PRODUCT CARD
========================= */
.card {
  background: #ffffff;
  border-radius: 6px;
  padding: 15px;
  box-shadow: 0 1px 4px rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.card:hover {
  transform: translateY(-4px);
  box-shadow: 0 6px 18px rgba(0,0,0,0.15);
}

/* PRODUCT IMAGE */
.card img {
  width: 100%;
  height: 160px;
  object-fit: cover;
  border-radius: 4px;
}

/* PRODUCT INFO */
.card h3 {
  font-size: 15px;
  margin: 10px 0 6px;
}

.card p {
  font-size: 13px;
  color: #374151;
  margin-bottom: 8px;
}

/* PRICE */
.price {
  font-size: 16px;
  font-weight: bold;
  color: #111827;
}

/* ADD TO CART BUTTON */
.card button {
  margin-top: 12px;
  background: #facc15;
  color: #111827;
  border: none;
  padding: 10px;
  border-radius: 6px;
  cursor: pointer;
  font-weight: bold;
  transition: background 0.2s ease;
}

.card button:hover {
  background: #fbbf24;
}

/* =========================
   RESPONSIVE
========================= */
@media (max-width: 1024px) {
  .container {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 768px) {
  .container {
    grid-template-columns: repeat(2, 1fr);
  }

  .nav-links {
    gap: 8px;
  }
}

@media (max-width: 480px) {
  .container {
    grid-template-columns: 1fr;
  }

  .navbar {
    flex-direction: column;
