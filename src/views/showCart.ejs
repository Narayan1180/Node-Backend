  text-decoration: none;
  display: inline-block;
}

.continue:hover {
  background: #059669;
}

  </style>
</head>
<body>
   <% if (success_msg && success_msg.length>0) { %>
  <div class="flash-msg">
    <%= success_msg %>
  </div>
<% } %>
   <% if (error_msg && error_msg.length>0) { %>
  <div class="flash-msg">
    <%= error_msg %>
  </div>
<% } %>

  <div class="container">
    <h1>üõí Your Shopping Cart</h1>

    <% if (!cart || cart.length === 0) { %>
      <div class="empty">
        <h2>Your cart is empty</h2>
        <p>Start adding some products ‚ú®</p>
      </div>
    <% } else { %>

      <div class="cart-header">
        <div>Product</div>
        <div class="price">Price</div>
        <div class="qty">Quantity</div>
        <div class="total">Total</div>
      </div>

      <% let grandTotal = 0; %>

      <% cart.forEach(item => { %>
        <% const itemTotal = item.product.price * item.quantity; %>
        <% grandTotal += itemTotal; %>

        <div class="cart-item">
          <div class="product-name"><%= item.product.name %></div>

          <div class="price">‚Çπ<%= item.product.price %></div>

          <div class="qty">
            <form   class="cart-update-form">
              <input type="hidden" name="productId" value="<%= item.product._id %>" />
              <button type= "button" name="action" value="decrease">‚àí</button>
              <span class="item-qty"><%= item.quantity %></span>
              <button type="button"name="action" value="increase">+</button>
            </form>

           
          </div>

          
          <div class="total">‚Çπ<span class="item-total"><%= itemTotal %></span></div>


        </div>
       
        <form action="/cart/remove" method="POST" style="text-align:right; margin-bottom:10px;">
          <input type="hidden" name="productId" value="<%= item.product._id %>" />
          <button class="remove">Remove</button>
        </form>
      <% }) %>

      <div class="summary">
          Total: ‚Çπ<span id="grand-total"><%= grandTotal %></span>

        <form action="/order/check-out" method="GET">
  <button type="submit" class="continue">
    Proceed to Checkout ‚Üí
  </button>
</form>

      </div>

    <% } %>
  </div>
  <div class="footer-actions">
  <a href="/show/dashboard" class="continue">
    ‚Üê Continue Shopping
  </a>
</div>
<script>
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('.cart-update-form').forEach(form => {

    form.querySelectorAll('button[name="action"]').forEach(btn => {
      btn.addEventListener('click', async () => {

        const productId = form.querySelector('input[name="productId"]').value;
        const action = btn.value;

        const qtySpan = form.querySelector('.item-qty');
        const itemTotalSpan = form.closest('.cart-item')?.querySelector('.item-total');

        const res = await fetch('/cart/update', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ productId, action })
        });

        const data = await res.json();
        if (!data.success) return;

        // ‚úÖ update only THIS product
        qtySpan.innerText = data.itemQty;
        if (itemTotalSpan) itemTotalSpan.innerText = data.total;

        // ‚úÖ update grand total
        document.getElementById('grand-total').innerText = data.grandTotal;
                //document.getElementByClass('total').innerText = data.total;


      });
    });
  });
});
</script>

</body>
</html>
