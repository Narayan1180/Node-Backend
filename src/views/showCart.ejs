  margin-top: 35px;
  text-align: center;
}
@keyframes fadeOut {
  0% { opacity: 1; }
  80% { opacity: 1; }
  100% { opacity: 0; }
}

.continue {
  background: #10b981;
  color: #fff;
  padding: 12px 26px;
  border-radius: 8px;
